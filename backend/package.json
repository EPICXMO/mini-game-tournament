{
  "name": "minigamehub-server",
  "version": "1.0.0",
  "description": "Backend server for MiniGameHub tournament platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --forceExit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "jest": {
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "transform": {},
    "testEnvironment": "node"
  },
  "keywords": ["minigames", "tournament", "socket.io", "express"],
  "author": "MiniGameHub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "express-rate-limit": "^7.1.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@eslint/js": "^9.0.0",
    "supertest": "^6.3.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
